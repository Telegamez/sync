#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validate commit message format
# Supports conventional commits: type(scope): description
# Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert

commit_msg=$(cat "$1")

# Pattern for conventional commits
pattern="^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,100}"

# Also allow merge commits and revert commits
merge_pattern="^Merge "
revert_pattern="^Revert "

if echo "$commit_msg" | grep -qE "$pattern"; then
  exit 0
elif echo "$commit_msg" | grep -qE "$merge_pattern"; then
  exit 0
elif echo "$commit_msg" | grep -qE "$revert_pattern"; then
  exit 0
else
  echo ""
  echo "ERROR: Invalid commit message format!"
  echo ""
  echo "Commit message must follow Conventional Commits format:"
  echo "  type(scope): description"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert"
  echo ""
  echo "Examples:"
  echo "  feat(auth): add OAuth2 login support"
  echo "  fix(room): resolve connection timeout issue"
  echo "  docs: update README with setup instructions"
  echo ""
  echo "Your commit message was:"
  echo "  $commit_msg"
  echo ""
  exit 1
fi
